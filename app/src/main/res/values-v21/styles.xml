<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:label">Lay Bare PH</item>
        <item name="colorPrimary">@color/laybareGreen</item>
        <item name="colorPrimaryDark">@color/laybareGreen</item>
        <item name="colorAccent">@color/btn</item>
        <item name="android:statusBarColor">@color/laybareGreen</item>
    </style>

    <style name="myCustomDialogPicker" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:actionModeBackground">@color/brownLoading</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.MyCustom" parent="@android:style/Theme.Holo.Light">
        <!--<item name="android:actionBarStyle">@style/AppTheme.designBar</item>-->
    </style>
    <style name="AppTheme.designBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>





</resources>
