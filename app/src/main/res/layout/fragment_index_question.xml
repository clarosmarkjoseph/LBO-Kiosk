<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/laybareBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/btnPrev"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:background="@color/brownLoading"
                android:drawableLeft="@drawable/arrow_left"
                android:drawablePadding="0dp"
                android:drawableTint="@color/themeWhite"
                android:elevation="5dp"
                android:text="Back"
                android:textColor="@color/themeWhite" />

            <LinearLayout
                android:id="@+id/linearQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeWhite"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnQuestionYes"
                    style="@style/btnLaybareGreen"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="30dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Yes, this is my first time "
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/themeWhite"
                    android:textSize="40sp" />


                <Button
                    android:id="@+id/btnQuestionNo"
                    style="@style/btnLaybareBrown"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="30dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="No, I already tried Lay Bare before"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/themeWhite"
                    android:textSize="40sp" />




            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>



