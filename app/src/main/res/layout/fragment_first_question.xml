<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/laybareBackgroundColor"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeWhite"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Is this your first time in Lay Bare?"
                android:textColor="@color/laybareGreen"
                android:textSize="55sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnQuestionYes"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="70dp"
                    android:background="@drawable/btn_yes"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Yes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/themeWhite"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/btnQuestionNo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="70dp"
                    android:background="@drawable/btn_no"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="No"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/themeWhite"
                    android:textSize="70sp" />
            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>