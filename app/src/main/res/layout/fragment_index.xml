<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/laybareGreen"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imgBtnSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:src="@drawable/a_settings"
            android:tint="@color/themeWhite" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/logo1"

                />

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Welcome to Lay Bare!"
                android:textColor="@color/themeWhite"

                android:textSize="65sp" />

            <TextView
                android:id="@+id/lblBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"

                android:textColor="@color/themeWhite"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/themeWhite"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lblClockTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="--:-- --"
                android:textColor="@color/themeWhite"
                android:textSize="25sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/themeBlack">


            </LinearLayout>

            <TextView
                android:id="@+id/lblTap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Tap anywhere to begin"
                android:textColor="@color/themeWhite"
                android:textSize="35sp"
                android:textStyle="italic" />


        </RelativeLayout>



    </RelativeLayout>



</android.support.constraint.ConstraintLayout>