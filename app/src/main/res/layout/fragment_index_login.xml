<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/laybareBackgroundColor">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPrev"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:background="@color/brownLoading"
                android:drawableLeft="@drawable/arrow_left"
                android:drawableTint="@color/themeWhite"
                android:text="Back"
                android:elevation="5dp"
                android:drawablePadding="0dp"
                android:textColor="@color/themeWhite" />

            <LinearLayout
                android:id="@+id/linearLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/login" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="Please enter your Lay Bare Online credential"
                            android:textColor="@color/laybareGreen"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/txtLoginEmail"
                            style="@style/txtTextBox"
                            android:layout_width="500dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:hint="Email address"
                            android:imeOptions="actionNext"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:nextFocusRight="@+id/txtLastName" />

                        <EditText
                            android:id="@+id/txtLoginPassword"
                            style="@style/txtTextBox"
                            android:layout_width="500dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:layout_margin="20dp"
                            android:layout_marginTop="30dp"
                            android:hint="Password"
                            android:imeOptions="actionGo"
                            android:inputType="textPassword" />

                        <Button
                            android:id="@+id/btnLoginClient"
                            style="@style/btnLaybareGreen"
                            android:layout_width="500dp"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_gravity="center"
                            android:layout_margin="30dp"
                            android:gravity="center"
                            android:text="SUBMIT" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>